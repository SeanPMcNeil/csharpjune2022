@model LogUser

<div class="text-center">
    <div class="row">
        <h3>Login</h3>
        <a href="/" class="text-end">Need to Register?</a>
    </div>
    <form action="/user/login" method="post">
        <div class="form-group">
            <label for="LogEmail" class="form-label">Email Address</label>
            <input asp-for="LogEmail" class="form-control">
            <span asp-validation-for="LogEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="LogPassword" class="form-label">Password</label>
            <input asp-for="LogPassword" class="form-control">
            <span asp-validation-for="LogPassword" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Login" class="btn btn-success">
        </div>
    </form>
</div>