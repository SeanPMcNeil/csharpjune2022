@model Wedding

<div class="text-center">
    <div class="row">
        <div class="col-8 text-start">
            <h1>Plan Your Wedding!</h1>
        </div>
        <div class="col text-end">
            <a href="/dashboard" class="btn btn-success">Dashboard</a>
            <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>
    <div class="row">
        <form action="/wedding/add" method="post">
            <div class="form-group">
                <label for="WedderOne" class="form-label">Wedder One</label>
                <input asp-for="WedderOne" class="form-control">
                <span asp-validation-for="WedderOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="WedderTwo" class="form-label">Wedder Two</label>
                <input asp-for="WedderTwo" class="form-control">
                <span asp-validation-for="WedderTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Date" class="form-label">Date</label>
                <input asp-for="Date" class="form-control">
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Address" class="form-label">Wedding Address</label>
                <input asp-for="Address" class="form-control">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form">
                <input type="hidden" asp-for="UserId" value="@ViewBag.LoggedUser.UserId">
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create Wedding" class="btn btn-info">
            </div>
        </form>
    </div>
</div>