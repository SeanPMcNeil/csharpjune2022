@model Dish

<div class="text-center">
    <div class="row">
        <div class="col-10">
            <h1 class="text-start">Yum, take a look at our tasty dishes!</h1>
        </div>
        <div class="col-2">
            <a href="/dish/new" class="btn btn-info">Add a Dish</a>
        </div>
    </div>
    <hr>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Chef</th>
                <th>Tastiness</th>
                <th>Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Dish d in ViewBag.AllDishes)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.Chef.FirstName @d.Chef.LastName</td>
                    <td>@d.Tastiness</td>
                    <td>@d.Calories</td>
                </tr>
            }
        </tbody>
    </table>