@model LogUser

<div class="text-center">
    <div class="row">
        <div class="col-10 text-start">
            <h1>Login to this Cool Site!</h1>
        </div>
        <div class="col-2 text-end">
            <a href="/" class="btn btn-info">Register</a>
        </div>
    </div>
    <form action="/user/login" method="post">
        <div class="form-group">
            <label for="LogEmail">Email:</label>
            <input asp-for="LogEmail" class="form-control">
            <span asp-validation-for="LogEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="LogPassword">Password:</label>
            <input asp-for="LogPassword" class="form-control">
            <span asp-validation-for="LogPassword" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Login!" class="btn btn-primary">
        </div>
    </form>
</div>
