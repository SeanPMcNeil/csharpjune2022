@model Association

<form action="/category/addproduct" method="post">
    <div class="form-group">
        <label for="ProductId">Add Category</label>
        <select asp-for="ProductId" class="form-select">
            @foreach (Product p in ViewBag.OtherProducts)
            {
                <option value="@p.ProductId">@p.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="CategoryId" value="@ViewBag.OneCategory.CategoryId">
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Add" class="btn btn-info">
    </div>
</form>