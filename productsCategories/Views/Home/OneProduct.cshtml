@model Product

<div class="text-center">
    <h1>@ViewBag.OneProduct.Name</h1>
    <div class="row">
        <div class="col-6">
            <h3>Categories:</h3>
            <ul>
                @foreach (Association a in ViewBag.OneProduct.ListedCategories)
                {
                    <li>@a.Category.Name</li>
                }
            </ul>
        </div>
        <div class="col-6">
            <partial name="_AddCategory">
        </div>
    </div>
</div>